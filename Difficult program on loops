using System;
					
public class bill
{
	public static void Main()
	{
		double avg=0.0;
		int prod=1;
		int k=0;
		int sum=0;
		for(int i=1;i>0;i++)
		{
			Console.WriteLine("Enter a number or press Q to quit");
			String s=Console.ReadLine();
			if (s.Equals("Q"))
			   {
				   Console.WriteLine("You have ended the repitition");
				   break;
			   }
			else
			{
				int n=Convert.ToInt32(s);
				prod=prod*n;
				sum=sum+n;
				k++;
			}
			
		}
		if(k==0)
		{
			Console.WriteLine("You have quit on first time");
		}
		else
		{
			Console.WriteLine("Product of numbers given= "+prod);
			avg=sum/k;
			Console.WriteLine("Average of numbers added= "+avg);
		}
		
		
	}
}
